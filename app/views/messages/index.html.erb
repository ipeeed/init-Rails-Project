<h1>メッセージ一覧</h1>

<% if @messages.any? %>
  <table class="table table-striped">
    <thread>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>メッセージ</th>
      </tr>
    </thread>
    
    <tbody>
      <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.id, message %></td> <!-- リンク設定 -->
        <td><%= message.title %></td>
        <td><%= message.content %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
  
  <div>
    <%= paginate @messages %>
  </div>
<% end %>


